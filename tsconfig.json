{
    "files": [
        "src/index.ts"
    ],
    "compilerOptions": {
        "target": "es2018",
        "lib": [
            "es2018",
            "dom"
        ],
        "types": [
            "node"
        ],
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "paths": {},
        // 支持装饰器start
        "strictFunctionTypes": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        //支持装饰器end
    },
    "include": [
        "src",
        "src/index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}